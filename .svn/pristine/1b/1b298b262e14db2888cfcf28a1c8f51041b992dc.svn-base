@charset "UTF-8";



.content{
    width: 799px;
    height: 800px;

    border-radius: 3px;
    overflow: hidden;
    background-color: #fff;

}
.thdD-box{
    /*视图距离*/
    perspective:1000;
    transform-style:preserve-3d;
}



/*头像部分*/
.content .baseinfo .head-box{
    height: 250px;
    background: url(../images/girl-bg.jpg) no-repeat center  -153px ;
    background-size: 800px;

    position: relative;
}
.baseinfo .headimg{
    position: absolute;

    bottom: -53px;
    left: 50%;
    margin-left: -53px;
}
.baseinfo .headimg{

    height: 106px;
    width: 106px;
}
.baseinfo .headimg img{
    height: 106px;
    width: 106px;
}


/*内容正文*/
.baseinfo .mess-box{
    font-size: 14px;
    line-height: 26px;

    padding: 30px 20px;
    border-top: 1px solid #ccc;

    color: #333;
}

.mess-box  label{
    display: inline-block;
    width: 5em;
    color: #666;
}

/*直接div*/
.mess-box>div{
    position: relative;
}

.mess-box ul.back{

    position: absolute;
    left: 0;
    bottom: 0;

    width: 100%;
    height: 100%;

    border-radius: 3px;
    line-height: 134px;
    box-shadow: 0 0 10px #1ef4cb;

    text-align: center;
    color: #fff;
    font-size: 18px;
    font-weight: 600;
    background: url(../images/edit-tip.png) no-repeat 95px 51px;
    background-color:  #1ef4cb80;

}

.mess-box>div:hover .active{
    display: block;
}

.baseinfo .mess-box div ul{
    display: block;
    /* float: left; */
    width: 260px;
    /* height: 100px; */
    /* border-radius: 3px; */
    padding: 8px 20px;
}

.mess-box .name-box {
    height: 142px;
    width: 302px;

    float: left;
}

.mess-box .name-box:hover .flip{
    transform:rotateY(180deg);
}

.mess-box .auth-box:hover .flip{
    transform:rotateY(180deg);
}


.mess-box .auth-box {
    height: 142px;
    width: 302px;
    float: right;
}


/*背景框*/
.mess-box .back{
    color: #2d374b;
    background-color: #2b9dd8;

    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;

    display:  block;
    width: 302px;
    height: 142px;

    font-size:24px;
    text-align: center;
    line-height: 140px;
}





 /*底部*/
.mess-box .bottom-box{
    margin-top: 162px;
    clear: both;
    /* width: 698px; */
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    border: 1px solid #ccc;

    height: 145px;
}

.baseinfo .mess-box .bottom-box ul{
    width: 718px;

}

.bottom-box li span{
    font-size: 14px;
    font-style: italic;
    color: #007fff;
    margin-right: 10px;
    font-weight: 600;

}

.back i{
    position: relative;
    top: 8px;
    display: inline-block;
    height: 32px;
    width: 32px;
}



i.modify-tip{

    background: url(../images/modify-tip.png) no-repeat;
    background-size: 32px;
}


i.auth-tip{

    background: url(../images/auth-tip.png) no-repeat;
    background-size: 32px;
}


