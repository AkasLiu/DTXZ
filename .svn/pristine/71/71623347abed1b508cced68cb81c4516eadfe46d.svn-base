}

.question_head .detail{
	float: right;
	/*display: inline-block;*/
	width: 620px;
	height: 33px;
	/*border: 1px solid red;*/
}

.question_head .foot{
	display: inline-block;
	width: 621px;
	height: 17px;
	/*border: 1px solid red;*/
	position: relative;
	top: -17px;
	right: -66px;
}

.foot .foot_letf{
	float: left;
}

.foot .foot_right{
	float: right;
}

