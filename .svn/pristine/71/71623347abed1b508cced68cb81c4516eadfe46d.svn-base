.question_content{
	padding: 20px;
	border-bottom: 1px solid #ddd;
}

.question_menu{
	height: 17px;
	padding: 20px 0px;
	margin: 20px;
}

.question_menu a{
	float: right;
	margin-right: 10px;
	/*background: url(../images/sign_right.png) no-repeat 0px 0px;*/
}

