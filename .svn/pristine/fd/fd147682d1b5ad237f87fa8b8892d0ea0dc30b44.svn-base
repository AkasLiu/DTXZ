

/* 图标类 */
.history-icon {
	display: inline-block;
	float: left;
	width: 30px;
	height: 30px;
	background: url("../images/history.png") no-repeat;
	background-size: 30px;
}

/* 辅助类 */
.common-box {
	box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.3);
}

.grey-hr {
	color: rgba(0, 0, 0, 0.1);
	margin: 20px 0;
}
/* 强调一些数字 */
.num-active {
	color: #00bc9b !important;
	margin-right: 40px;
	font-weight: bold;
}


/* 容器类 */
.exam-his-box {
	margin: 0 auto;
	margin-top: 40px;
	/*padding: 20px;*/
	overflow: hidden;
	width: 800px;
	background-color: #fff;
	border: 1px solid rgba(0, 0, 0, 0.2);
	box-shadow: 2px 3px 4px rgba(0, 0, 0, 0.2);
	border-radius: 20px;
}

.exam-his-header {
	font-size: 20px;
	padding: 24px 24px;
	color: #ddd;
	font-weight: bold;
	background-color: rgba(30, 33, 41, 0.9);
}

.exam-his-content {
	text-align: center;
	/*background-color: #999;*/
}

.exam-his-summary {
	padding: 20px 10px 0;
}

.table-box {
	margin: 20px auto;
	font-size: 15px;
	border: 0.1px solid rgba(0, 0, 0, 0.1);
	/* 背景色渐变 */
	background: -webkit-linear-gradient(top, 
		rgba(12, 12, 12, 0.9), rgba(12, 12, 12, 0.1));
	-webkit-background-clip: text;         /*规定背景的划分区域*/
	-webkit-text-fill-color: transparent;  /*防止字体颜色覆盖*/
}

