/********* 容器类内的元素设计 *******/

/* span样式 */
.exam-his-content span {
	font-size: 14px;
	color: #666;
}


.table-box th {
	/*background-color: #fff;*/
	color: white;
	height: 50px;
	line-height: 50px;
}

.table-box td,th {
	border-bottom: 0.1px dashed rgba(74, 74, 74, 0.1);
}

.table-box td,th {
	padding: 0 40px;
	max-width: 100px;
	height: 40px;
	text-align: center;
	line-height: 40px;
	/* 设置不会换行 */
	white-space: nowrap;
	/* 设置隐藏超出部分并显示... */
	text-overflow: ellipsis;
	border-collapse: collapse;
	overflow: hidden;
}

.more-his-btn {
	display: inline-block;

	padding: 12px 30px;
	margin-bottom: 20px;
	color: white;
	cursor: pointer;
	/*width: 200px;*/
	/*height: 40px;*/
	background-color: blue;
	border-style: none;
	border-radius: 20px;
	background-color: rgba(0, 0, 0, 0.4);
	box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.4);	
}

.more-his-btn:hover {
	color: white;
	background-color: rgba(0, 0, 0, 0.3);
	box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);	
}



