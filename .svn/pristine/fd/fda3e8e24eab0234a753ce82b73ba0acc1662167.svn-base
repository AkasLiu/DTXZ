* {
	margin: 0;
	padding: 0;
}

body {
	font: 12px/1.5 arial,STHeiti,'Microsoft YaHei',宋体;
	background-color: #fafafa;;
}

a {
	text-decoration: none;
}

.answer-sheet-box ul {
	/* 默认隐藏 */
	/*visibility: hidden;*/
	display: none;
	list-style-type: none; 
}

.answer-sheet-box ul li {
	float: left;
	margin: 20px 5px;
}

.card-unfold {
	cursor: pointer;
	/* 设置不可选择文字 */
	/*user-select: none;*/
}

.card-unfold:hover {
	color: #40b5bb;
}

.answer-sheet-box ul li a {
	display: block;
	width: 40px;
	height: 40px;
	line-height: 40px;
	text-align: center;
	font-size: 16px;
	color: #fff;
	background-color: #A4A4A4;
	border-radius: 4px;
	/*box-shadow: 1px 2px 1px rgba(0, 0, 0, 0.2);*/
}

.answer-sheet-box ul li a:hover {
	background-color: #40b5ee;
}


.answer-sheet-box ul li .active {
	background-color: #40b5ee;
}


.left {
	float: left;
}

.right {
	float: right;
}

.clear {
	clear: both;
}

.exam-box {
	position: relative;
	width: 960px;
	/* 居中 */
	margin: 0 auto;
	margin-top: 20px;
	margin-bottom: 50px;
	border-radius: 10px;
	box-shadow: 3px 4px 4px rgba(0, 0, 0, 0.15);
	background-color: #fff;
	overflow: hidden;
}

.exam-header {
	width: 93%;
	height: 30px;
	padding: 10px 200px 10px 30px;
	vertical-align: center;
	font-size: 20px;
	color: #fff;
	background-color: #2d374b;
}
/*
.create-header {
	height: 50px;
	vertical-align: center;
	font-size: 18px;
	color: #fff;
	background-color: #2d374b;
}
*/
.process {
	display: inline-block;
	margin: 10px 10px 0 0;
	width: 650px;
	height: 12px;
	overflow: hidden;
	background-color: #fff;
	border-radius: 5px;
}

.process-bar {
	float: left;
	width: 20%;
	height: 100%;
	background-color: rgba(56, 186, 256, 0.9);
}

.process-time {
	display: inline-block;
	margin-left: 10px;
	color: #fff;
}
/*
.process-time .small-info {
	margin-right: 10px;
	font-size: 14px;
}*/

.ico-time-control {
	display: inline-block;
	width: 28px;
	height: 28px;
	background: url("../images/ico-media.png") 0 -96px no-repeat;
}

/* 试题的类型 */
.subject-title {
	height: 40px;
	line-height: 40px;
	font-size: 16px;
	vertical-align: center;
	border-bottom: 0.2px solid rgba(0, 0, 0, 0.1);
}

.subject-title i {
	float: left;
	display: block;
	margin: 5px 8px 0 20px;
	width: 30px;
	height: 30px;
	background: url("../images/question.png") no-repeat;
	background-size: 30px;
}

