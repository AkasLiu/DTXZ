*{
	margin:0;
	padding: 0;
}

body{
	background-color: #EEEEEE;
}

.news_box{
	width: 600px;
	margin: 50px auto;
	background-color: white;
	box-shadow: 0 0 1px 1px #E0E0E0;
	border-radius: 5px;
	overflow: hidden;
	position: relative;
}

.news_box .news_contain{
	width: 560px;
	margin: 20px 20px;
	overflow: hidden;
}

.news_box .news_contain .title{
	width: 100%;
	margin-bottom: 10px;
	border-bottom: 1px solid #999;
	overflow: hidden;
}

.news_box .news_contain .title span{
	float: left;
	display: inline;
	width: 100px;
	line-height: 20px;
	margin-top: 8px;
	font-size: 20px;
	font-weight: 600;
	color:black;
}

.news_box .news_contain .title form{
	float: right;
	width: 200px;
	height: 34px;
	line-height: 34px;
	margin-bottom: 8px;
	margin-right: 20px;
	font-size: 24px;
	overflow: hidden;
	position: relative;
}

.news_box .news_contain .title form button{
	width: 25px;
	height: 25px;
	position: absolute;
	top: 4px;
	left: 3px;
	background-color: white;
	border: none;
	outline: none;
	cursor: pointer;
	background: url(../images/searchTip.png) no-repeat 3px 10px;
}

.news_box .news_contain .title input{
	width: 200px;
	height: 25px;
	line-height: 25px;
	margin-right: 20px;
	border-radius: 12px;
	padding-left: 22px;
	outline: none;
	border: 1px solid #CCC;
	box-sizing: border-box;
	color: black;
}

.news_box .news_contain .title input:hover{
	border: 1px solid #666;
}

.news_box .news_contain span img{
	width: 15px;
	height: 15px;
}

.news_box .news_contain ul{
	list-style: none;
	width: 560px;
	overflow: hidden;
}

.news_box .news_contain ul li{
	width: 550px;
	padding-left: 20px;
	margin-bottom: 10px;
	overflow: hidden;
}

.news_box .news_contain ul li>a{
	float: left;
	width: 40px;
	height: 40px;
	border: 1px solid #ededed;
	border-radius: 40px;
	margin-right: 20px;
}

.news_box .news_contain ul li>a img{
	width: 40px;
	height: 40px;
}

.news_box .news_contain ul li .tooltip{
	float: left;
	width: 460px;
	height: 55px;
	border-radius: 5px;
	background-color: #ECF1F1;
	position: relative;
}

.news_box .news_contain ul li .tooltip .tooltip_arrow{
	width: 0px;
	height: 0px;
	border: 9px solid transparent;
	border-right: 9px solid #ECF1F1;
	position: absolute;
	left: -16px;
	top: 14px;	
}

.news_box .news_contain ul li .tooltip .tooltip_inner{
	width: 420px;
	height: 45px;
	margin: 5px 20px;
	font-size: 14px;
	line-height: 45px;
	cursor: pointer;
}

.news_box .tooltip .tooltip_inner .chat-title{
	float: left;
	width: 300px;
	height: 45px;
	overflow: hidden;
}

.news_box .tooltip .tooltip_inner .letter-info{
	float: left;
	width: 120px;
	height: 45px;
}

.news_box .tooltip .tooltip_inner .letter-info p{	
	height: 22px;
	line-height: 23px;
	text-align: right;
}

.news_box .tooltip .tooltip_inner .letter-info .delete-letter{
	height: 22px;
}

.news_box .tooltip .tooltip_inner .letter-info .delete-letter>a{
	text-decoration: none;
	height: 22px;
	line-height: 22px;
	text-align: right;
	color: dodgerblue;
}

.news_box .tooltip .tooltip_inner .letter-info .delete-letter>a:hover{
	color: mediumvioletred;
}

.news_box .news_contain ul li.pagination{
	width: 160px;
	margin: 0 120px;
	padding: 0px 80px;
	padding-top: 10px;
}

.news_box .news_contain ul li button{
	border: none;
	width: 50px;
	height: 20px;
	border-radius: 3px;
	cursor: pointer;
	outline: none;
}

.news_box .news_contain ul li.pagination>p{
	float: left;
	margin: 0 9px;
	width: 40px;
	height: 18px;
	text-align: center;
}

.news_box .news_contain ul li button.lastpage{
	float:left;	
}

.news_box .news_contain ul li button.nextpage{
	float: right;
}

.chat-contain{
	float:left;
	display: block;
	margin-left: 62px;
	width:460px;
	border-top: 1px dashed #CCC;
	background-color: #ECF1F1;
}
.chat-contain .contain-p{
	width:420px;
	line-height: 20px;
	overflow: hidden;
	padding: 10px 20px;
	font-size: 13px;
}
