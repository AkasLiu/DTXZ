*{
	padding: 0;
	margin: 0;
}



a{
	text-decoration: none;
}



.box-content{
	width: 760px;
	margin: 18px 20px 10px 20px;
	overflow: hidden;
}

.box-content ul{
	list-style: none;
	margin-top: -10px;
	overflow: hidden;
}

.box-content ul.essay-ul li{
	width: 760px;
	height: 50px;
	padding: 10px 0;
	overflow: hidden;
	border-bottom: 1px solid #999;
}

.box-content ul.essay-ul li:last-child{
	border-bottom: none;
}

.box-content ul.essay-ul li .li-content{
	width: 760px;
	height: 50px;	
	overflow: hidden;
}

.box-content ul.essay-ul li .li-content img{
	float: left;
	width: 50px;
	height: 50px;
}

.box-content ul.essay-ul li .li-content .essay-contain{
	float: left;
	width: 705px;
	margin-top: 5px;
	margin-left: 5px;
	overflow: hidden;
}

.essay-contain .essay-title{
	width:705px;
}

.essay-contain .essay-title a{
	display: inline-block;
	height: 20px;
	line-height: 20px;
	font-size: 14px;
	color: black;
	overflow: hidden;
	text-overflow: ellipsis;/*文字隐藏后添加省略号*/
	white-space: nowrap;/*强制不换行*/
	width: 40em;/*不允许出现半汉字截断*/
}

.essay-contain .essay-title a:hover{
	color: deepskyblue;
}

.essay-contain .essay-foot{
	width: 705px;
	height: 20px;
	margin-top: 5px;
	font-size: 13px;
	color:#999;
}

.essay-foot .eassay-foot-left{
	float: left;
	width: 450px;
	line-height: 20px;
}

.eassay-foot-left label{
	float: left;
	width: 60px;
	height: 20px;
}

.eassay-foot-left span{
	float: left;
	width: 85px;
	height: 20px;
}

.essay-foot .eassay-foot-right{
	float: right;
	height: 20px;
	line-height: 20px;
	overflow: hidden;
}

.eassay-foot-right label{
	float: left;
	width: 30px;
	height: 20px;
	text-align: right;
}

.eassay-foot-right span{
	float:left;
	height: 20px;
	margin-left: 5px;
	text-align: left;
}

.eassay-foot-right  p{
	float: left;
	margin-left: 10px;
	width: 1px;
	height: 20px;
}

.box-content .pagination-ul{
	width: 760px;
	overflow: hidden;
	margin-top: 30px;
}

.box-content .pagination-ul li{
	float:left;
	height: 32px;
	margin-right: 5px;
}

.box-content .pagination-ul li.first-page{
	width: 44px;
	margin-left: 100px;
}

.box-content .pagination-ul li.last-page{
	width: 44px;
}

.box-content .pagination-ul li.prev-page{
	width: 56px;
}

.box-content .pagination-ul li.next-page{
	width: 56px;
}

.box-content .pagination-ul li.page-number{
	width: 32px;
}

.box-content .pagination-ul li>a{
	display: block;
	height: 30px;
	text-align: center;
	line-height: 30px;
	border: 1px solid #e1e1e1;
	color: #999;
}

.show{
	background-color: #00bc9b;
	border-color: #00bc9b;
	box-sizing: border-box;
}

.show>a>p{
	color: #FFF;
}
