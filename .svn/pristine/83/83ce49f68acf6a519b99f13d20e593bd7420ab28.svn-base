@charset "UTF-8";


body{
    background-color: #fff;

    padding-left: 20px;

}

h3.title{

    color: #666;
    font-size: 22px;
    line-height: 36px;
    border-bottom: 2px solid #efefef;
    width: 242px;
    padding-left: 10px;
    margin-bottom: 30px;
}


.main{
    margin-bottom: 30px;
    width: 600px;

    padding: 20px 0 30px 10px;

}

.main ul{
    padding-left: 20px;
}

.main  li{
    margin-bottom: 20px;
}

.main  label{
    margin-right: 10px;
    min-width: 4em;
    display: inline-block;
}

.main input[type="text"],.main input[type="password"]{
    border: 1px solid #ccc;

    outline: none;

    border-radius: 10px;
    background-color: #fff;
    color: #666;
    padding: 5px 10px;
}

.main button[type="submit"]{
    float: right;
    margin-right: 200px;
}

.main .fileupload{
    overflow: hidden;
    display: inline-block;
    width: 60px;
    height: 60px;
    background: url(../images/upload-bg.png) no-repeat;
    background-size: 60px;

    position: relative;
    top: 20px;

}

.fileupload input[type="file"]{
    cursor: pointer;
    display: block;
    width: 60px;
    height: 60px;
    opacity: 0;
    vertical-align: middle;
}


.main textarea{
    font-size: 14px;
    color: #333;
    width: 300px;
    resize: none;

    border-radius: 10px;
    padding: 10px;
    color: #666;
    border: 1px solid #ccc;
    outline: none;

}




.main .clazz-tb {
    width: 700px;


}

.main .clazz-tb td{
    text-align: center;
    font-size: 14px;

}