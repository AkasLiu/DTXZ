@charset "UTF-8";



.main{

    margin-top: 20px;
    margin-bottom: 30px;
    background: url(../images/repeat_bg_y.png) repeat-y;
    background-size: 1310px;
    border:1px solid #e0e0e0;
    border-radius: 3px;

    height: 800px;
    overflow: hidden;

}
.main .menu{
    width: 201px;
}


.main .menu dt{
    position: relative;


}
.main .menu  h3{

    padding-left: 14px;
    font-size: 16px;
    line-height: 50px;
    font-weight: 600;
    border-bottom: 2px dashed  #ccc;
}

.main .menu dd{
    display: block;


    cursor: pointer;
    height: 40px;
    line-height: 40px;

    border-left: 3px solid transparent;

    padding-left: 22px;

    font-size: 16px;
    color: #333;
}
.main .menu dd:hover{

    border-left-color: #2c83d8;
    background-color: rgba(50, 50, 50,.1);
}

.main .menu dd.active{
    font-weight: 600;
    border-left-color: #2c83d8;
    background-color: #fafafa;

}

/********************右边的主内容*****************/
.content{
    width: 799px;
    height: 800px;

    border-radius: 3px;
    overflow: hidden;

}
/*模糊毛玻璃*/
.blur{

    -webkit-filter: blur(5px);/* Chrome,Opera*/
    -moz-filter:blur(5px);
    -ms-filter: blur(5px);
    filter: blur(5px);
}

.content .baseinfo .head-box{
    height: 250px;
    background: url(../images/girl-bg.jpg) no-repeat center  -153px ;
    background-size: 800px;

    position: relative;
}
.baseinfo .headimg{
    position: absolute;

    bottom: -53px;
    left: 50%;
    margin-left: -53px;
}
.baseinfo .headimg{
    height: 106px;
    width: 106px;
}
.baseinfo .headimg img{
    height: 106px;
    width: 106px;
}


/*内容正文*/
.baseinfo .mess-box{
    font-size: 14px;
    line-height: 26px;
    margin: 30px auto;
    width: 700px;
    color: #333;
}

.mess-box  label{
    display: inline-block;
    width: 5em;
    color: #666;
}
.mess-box>div{
    position: relative;
}
.mess-box .back{

    position: absolute;
    left: 0;
    bottom: 0;

    width: 100%;
    height: 100%;

    border-radius: 3px;
    line-height: 134px;
    box-shadow: 0 0 10px #1ef4cb;

    text-align: center;
    color: #fff;
    font-size: 18px;
    font-weight: 600;
    background: url(../images/edit-tip.png) no-repeat 95px 51px;
    background-color:  #1ef4cb80;



}

.mess-box>div:hover .active{
    display: block;
}


.baseinfo .mess-box ul{
    display: block;
    float: left;
    width: 260px;
    height: 100px;
    border: 1px solid #eee;
    border-radius: 3px;
    padding: 20px;
}
.baseinfo .mess-box .name-box {
    height: 142px;
    width: 302px;

    /*视图距离*/
    perspective:1000;
    transform-style:preserve-3d;

    float: left;
}

.baseinfo .mess-box .name-box:hover .flip{
    transform:rotateY(180deg);
}


.baseinfo .mess-box .auth-box{
    float: right;
}

.baseinfo .mess-box .bottom-box{
    margin-top: 20px;
    clear: both;
    border: 1px solid #eee;
    width: 698px;
    height: 145px;
}